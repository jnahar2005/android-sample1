<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""/>

    <RelativeLayout
        android:id="@+id/rl_client_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_client_chat"
            android:layout_marginLeft="10dp"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_client_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Client"
                android:textColor="@color/pure_black"
                />

            <LinearLayout
                android:id="@+id/tv_clientchat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_clientchat"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/rl_forward_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_forward_msg"
                    android:alpha="0.7"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/tv_forward_msg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="10dp"
                        android:text="fgfgdg"
                        android:textColor="@color/pattern16graycolor"
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:layout_marginRight="12dp"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_clientmsg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/clr_white"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_time_n_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 Set 2018"
                    android:textColor="@color/pure_black"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:textSize="10dp"/>

            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/iv_forward_client"
            android:layout_toRightOf="@+id/ll_client_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:src="@drawable/ic_forward_arrow"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:visibility="visible"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/rl_doctor_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_doctor_chat"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:visibility="visible"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/tv_doctor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Doctor"
                android:visibility="gone"
                android:textColor="@color/clr_registrationtxt"
                android:layout_marginLeft="95dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_doctorchat"
                android:layout_marginTop="5dp">

                <RelativeLayout
                    android:id="@+id/rl_forward_doc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/bg_forward_msg"
                    android:alpha="0.7"
                    android:visibility="gone">


                    <TextView
                        android:id="@+id/tv_forward_msg_doc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:paddingRight="12dp"
                        android:paddingLeft="10dp"
                        android:text="dfgfdgdfgd"
                        android:textColor="@color/pattern16graycolor"
                        android:textSize="12dp"
                        android:textStyle="italic"
                        android:layout_marginRight="12dp"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tv_doctorchat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textColor="@color/clr_white"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="right"
                android:gravity="right">

                <TextView
                    android:id="@+id/tv_date_n_time_doc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8 Set 2018"
                    android:textColor="@color/clr_registrationtxt"
                    android:layout_marginLeft="0dp"
                    android:layout_gravity="right"
                    android:textSize="10dp"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_forward_doc"
            android:layout_toLeftOf="@+id/ll_doctor_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:src="@drawable/ic_back_arrow"
            android:layout_gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:visibility="visible"/>


    </RelativeLayout>



</LinearLayout>